<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_add_games"
    android:orientation="vertical"
    tools:context=".fragments.user_add_games">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="20dp"
        android:text="Add your game"
        android:textColor="#F9F8FB"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#3F51B5"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Image"
            android:textColor="#9C27B0"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/selectImg"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/game_icon" />
    </LinearLayout>

    <EditText
        android:id="@+id/game_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/textColorHintInverse"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:fadeScrollbars="false"
        android:hint="Name"
        android:inputType="text"
        android:shadowColor="#F4ECEC"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/game_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/textColorHintInverse"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Type of game"
        android:inputType="text"
        android:shadowColor="#F4ECEC"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/launch_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/textColorHintInverse"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Launch year"
        android:inputType="numberDecimal"
        android:shadowColor="#F4ECEC"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/develop_comp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/textColorHintInverse"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Develop company"
        android:inputType="text"
        android:shadowColor="#F4ECEC"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/game_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/textColorHintInverse"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Description of the game"
        android:inputType="text"
        android:shadowColor="#F4ECEC"
        android:textSize="34sp" />

    <Button
        android:id="@+id/send_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#CD49ACD8"
        android:text="Submit"
        android:textSize="24sp" />
</LinearLayout>